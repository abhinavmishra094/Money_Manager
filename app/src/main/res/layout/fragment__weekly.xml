<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abhin.money_manager.AccountBalace">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/blueishgrey"
        android:layout_weight="2.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spend in Current Month"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="₹ 170000"
            android:textColor="@color/white"
            android:gravity="center"/>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:max="100"
            android:progress="30"
            android:progressDrawable="@drawable/seekbar"

           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="right"
                android:background="#ff324f5a"
                android:layout_marginLeft="110dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:text="Budget ₹14000"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="right"
                android:background="#ff324f5a"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:text="Income ₹25000"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv1"></ListView>
    </LinearLayout>

</LinearLayout>
